doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="uploadFile.css")
        title Home Cloud
    body 
        h2 Upload a File
        div.container
            div.content-form
                form(action="/", method="post" enctype="multipart/form-data") 
                    div.content-buttons
                        input(type="file" name="file").file-select.file
                        input(type="submit", value="Subir").buttonUploadFile.btn.btn-primary
            div.content-image-preview
                img(src="", alt="").preview-image

        script(src="./scripts/upload.js") 